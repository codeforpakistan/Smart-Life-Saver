<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#7f7f7f"
    android:gravity="top"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:visibility="visible"
    tools:context=".MainActivity" >

    <ImageButton
        android:id="@+id/start"
        android:layout_width="140dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_marginRight="150dp"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="false"
        android:background="#bbbbbb"
        android:focusableInTouchMode="true"
        android:scaleType="fitEnd" />

    <ImageButton
        android:id="@+id/settings"
        android:layout_width="140dp"
        android:layout_height="150dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/start"
        android:background="#bbbbbb" />

    <ImageButton
        android:id="@+id/help"
        android:layout_width="140dp"
        android:layout_height="150dp"
        android:layout_alignLeft="@+id/start"
        android:layout_below="@+id/start"
        android:layout_marginTop="40dp"
        android:background="#bbbbbb" />

    <ImageButton
        android:id="@+id/about"
        android:layout_width="140dp"
        android:layout_height="150dp"
        android:layout_alignLeft="@+id/settings"
        android:layout_alignTop="@+id/help"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="0dp"
        android:background="#bbbbbb" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignRight="@+id/start"
        android:layout_alignTop="@+id/start"
        android:layout_marginTop="55dp"
        android:background="#aaaaa0"
        android:gravity="center_horizontal"
        android:text="Start App"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignLeft="@+id/about"
        android:layout_alignRight="@+id/settings"
        android:background="#aaaaa0"
        android:text="    Settings"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/about"
        android:layout_alignRight="@+id/about"
        android:background="#aaaaa0"
        android:text="     About"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/help"
        android:layout_alignRight="@+id/start"
        android:layout_marginBottom="55dp"
        android:background="#aaaaa0"
        android:text="Instructions"
        android:textSize="25sp" />

</RelativeLayout>